{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./server/",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 ./server/views/* ./dist/",
    "dev": "cross-env PLATFORM=development nodemon ./server/index.ts | pino-pretty",
    "dev:debug": "cross-env PLATFORM=development DEBUG=* nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "jest --passWithNoTests"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "pino": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-json": "^2.0.20",
    "@types/koa-pino-logger": "^3.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "nock": "^13.2.4",
    "nodemon": "^2.0.15",
    "pino-pretty": "^8.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
