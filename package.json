{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./server/",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 ./server/views/* ./dist/",
    "dev": "cross-env PLATFORM=development nodemon ./server/index.ts | pino-pretty",
    "dev:debug": "cross-env PLATFORM=development DEBUG=* nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "jest --passWithNoTests"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "axios": "^1.6.7",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.4.2",
    "ejs": "^3.1.9",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "pino": "^8.18.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.14.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-json": "^2.0.23",
    "@types/koa-pino-logger": "^3.0.4",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
