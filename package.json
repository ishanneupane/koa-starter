{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./server/",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 ./server/views/* ./dist/",
    "dev": "cross-env PLATFORM=development nodemon ./server/index.ts | pino-pretty",
    "dev:debug": "cross-env PLATFORM=development DEBUG=* nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "jest --passWithNoTests"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "axios": "^1.3.3",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "pino": "^8.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-json": "^2.0.20",
    "@types/koa-pino-logger": "^3.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.3.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
